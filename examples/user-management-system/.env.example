# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#using-environment-variables

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server (Preview) and MongoDB (Preview).
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings


# App settings
APP_NAME="User Management System"
APP_HOST="localhost"
APP_PORT=3000
ENABLE_HTTPS=0
VERIFY_SSL_CERTIFICATES=0
NODE_ENV="development"

# Security
BCRYPT_SALT_ROUNDS=10 

## Session expiry time (in minutes)
SESSION_EXPIRY=0
SESSION_SECRET="secretString$%^134"

## How many days if the user chooses the "remember me" option
REMEMBER_ME_DAYS=30

## Pagination 
USERS_PER_PAGE=15


# CORS settings (separate multiple origins by spaces or comma or semicolon)
ALLOWED_ORIGINS="http://127.0.0.1 https://127.0.0.1 http://localhost https://localhost https://studio.apollographql.com"


# Cache store settings 
REDIS_HOST=localhost
REDIS_PORT=6379


# Database settings

## PostgreSQL, MySQL, SQLite, SQL Server example
# DATABASE_URL="DRIVER://USER:PASS@HOST:PORT/DB_NAME?schema=SCHEMA", e.g:
# DATABASE_URL="postgresql://johndoe:randompassword@localhost:5432/mydb?schema=public"


## MONGODB example 
## MongoDB requires a replica set, so `PORT` is the port number of the primary DB in the set.
# DATABASE_URL="mongodb://[USER:PASS@]HOST:PORT/DB_NAME/?authSource=ADMIN_DB&replicaSet=REPLICA_SET_NAME".
# The [USER:PASS@] is only needed if the DB requires authentication. Examples: 
# DATABASE_URL="mongodb://johndoe:randompassword@localhost:30001/users_db/?authSource=admin&replicaSet=my_replica_set"
# DATABASE_URL=mongodb://127.0.0.1:30001/users_db?replicaSet=my_replica_set
